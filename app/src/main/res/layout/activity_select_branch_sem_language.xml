<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_Branch_Sem_Language">

    <LinearLayout
        android:id="@+id/linear_layout-2"
        android:layout_width="366dp"
        android:layout_height="350dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/border_layout"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:id="@+id/Settings"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@color/Dgreen"
            android:fontFamily="@font/lato_itallic"
            android:gravity="center"
            android:text="SELECT"
            android:textColor="#000000"
            android:textSize="34sp" />

        <Spinner
            android:id="@+id/Select_Branch"
            android:layout_width="336dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/border_layout"
            tools:ignore="SpeakableTextPresentCheck" />


        <Spinner
            android:id="@+id/Select_Sem"
            android:layout_width="336dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_layout"
            tools:ignore="SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/Select_Language"
            android:layout_width="336dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_layout"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/Save_Button"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_itallic"
            android:foregroundGravity="center"
            android:gravity="center"
            android:onClick="save_button"
            android:text="Submit"
            android:textColor="#000000"
            android:textSize="24sp"
            app:backgroundTint="#84C325"
            app:rippleColor="#000000"
            tools:ignore="OnClick" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>